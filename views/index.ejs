<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>

  <div class="tasks content">
    <h2>All Blogs</h2>

    <% if (tasks.length > 0) { %>
      <% tasks.forEach(task => { %>
        <a class="single" href="/tasks/<%= task._id %>">
          <h3 class="title"><%= task.title %></h3>
          <p class="snippet"><%= task.body %></p>
        </a>
      <% }) %>
    <% } else { %>
      <p>There are no tasks to display...</p>
    <% } %>
    
  </div>
  <script src="demo.js"></script>
</body>
</html>
